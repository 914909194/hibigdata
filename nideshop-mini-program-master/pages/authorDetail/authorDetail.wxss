.author-intro{
  display: flex;
  height: 250rpx;
  background-color:#fff;
}
.author-img {
  flex:1;
}
.author-des{
  flex:2;
}
.author-img image{
  width:100%;
  height:100%;
}
.author-des .author-name{
  display: block;
  padding:10rpx;
  font-weight: bold;
  font-size: 35rpx;
}
.author-grade,.author-hits,.article-num{
  font-size: 25rpx;
  color:#999;
  padding:10rpx;
}
.author-grade,.author-hits,.article-num,.sex{
  font-size: 25rpx;
  color:#999;
  padding:10rpx;
}
.article-header{
