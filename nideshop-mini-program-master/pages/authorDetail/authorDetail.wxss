  margin: 15rpx 15rpx 15rpx 15rpx;
  border-left:10rpx solid skyblue;
}
.article-list{
  width:100%;
  text-align: center;
}
.page {
  text-align: center;
  
  margin-top: 20rpx;
}
.page .pre-page{
