page{
    background: #f4f4f4;
    min-height: 100%;
}

.container{
    background: #f4f4f4;
    min-height: 100%;
}
.info-header{
  width: 100%;
  height:80rpx;
  border-left:10rpx solid #5AADD9;
  background:#fff;
  padding-left:20rpx;
}
.info-header text{
  line-height: 80rpx;
  color:#5AADD9;
}
.info-list{
  display:flex;
  height:180rpx;
  margin-top: 15rpx;
  background-color:#fff;
}
.info-img{
  width:180rpx;
}
.info-img image{
  width:100%;
  height:100%;
  padding:10rpx;
}
.info-des{
  width:570rpx;
  padding:15rpx;
}
.info-title{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:550rpx;
}
.info-detail{
  font-size: 25rpx;
  margin-top: 10rpx;
  color:#666;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}