page{
    background: #f4f4f4;
    min-height: 100%;
}

.container{
    background: #f4f4f4;
    min-height: 100%;
}
.article-content{
  padding-top: 120rpx;
  width:95%;
  margin:0 auto;
}
.article-list{
  display:flex;
  /* height:150rpx; */
  background-color: #fff;
  margin-top: 15rpx;
}
.article-img{
  flex:1;
  
}
.article-img image{
  /* width:100%;
  height:100%; */
   width:180rpx; 
   height:160rpx; 
}
.article-des{
  flex:3;
  padding:10rpx;
}
.article-title{
  display: block;
  padding:10rpx;
  font-weight: bold;
  color:#999;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.article-detail{
  font-size: 25rpx;
  color:#666;
  padding:0 10rpx 0 10rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.header{
  position: fixed;
  width:100%; 
  top: 0;
  left:0;
  right:0;
  background: #fff;
}
.menu{
  display: flex;
  width:97%;
  margin:0 auto;
}
.list-menu{
  flex:1;
  /* background-color:#fff; */
  border:1rpx solid #31C27C;
  color:#000;
  text-align:center;
  line-height:60rpx;

}
