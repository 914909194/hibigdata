page{
    background: #f4f4f4;
    min-height: 100%;
}

.container{
    background: #f4f4f4;
    min-height: 100%;
}
.article-img image{
  width:100%;
}
.article-title{
  width:100%;
  /* height:80rpx; */
  padding: 10rpx;
  font-weight: bold;
}
