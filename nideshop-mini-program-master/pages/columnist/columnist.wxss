/*专栏文章开始  */
.article{
  width: 100%;
  /* height:500rpx; */
  /* background:green; */
}
.article-header{
  width: 100%;
  height:80rpx;
  border-left:10rpx solid #5AADD9;
  background:#fff;
 
}
.article-header text{
  line-height: 80rpx;
  float: left;
  color: #5AADD9;
  margin-left: 15rpx;
}
.article-content{
  width:750rpx;
}
.article-content .article-list{
  display:flex;
  margin-top: 15rpx; 
  background:#fff;
  /* height:250rpx; */
}
.article-img{
  flex:1;
 
}
.article-img image{
   width:180rpx; 
   height:160rpx; 
}
.article-des{
  flex:3;
  padding:15rpx;
  overflow: hidden;
}
.article-content .article-list .article-des text{
  display: block;
}
.article-content .article-list .article-des .article-title{
  font-size: 30rpx;
  font-weight: bold;
  color:#999;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.article-content .article-list .article-des .article-detail{
  font-size: 25rpx;
  margin-top: 10rpx;
  color:#666;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/*专栏文章结束  */

